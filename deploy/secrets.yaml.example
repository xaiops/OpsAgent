---
# IMPORTANT: This is an EXAMPLE file. DO NOT commit actual secrets to git!
# Copy this file to secrets.yaml and fill in your actual values.
# Add secrets.yaml to .gitignore

apiVersion: v1
kind: Secret
metadata:
  name: ops-agent-secrets
  labels:
    app: ops-agent
type: Opaque
stringData:
  # LLM API Configuration
  # For LlamaStack: use "not-needed" or any placeholder
  # For OpenAI: use your actual API key (sk-...)
  # For Anthropic: use your actual API key
  llm-api-key: "your-api-key-here"
  
  # LLM Endpoint URL
  # Examples:
  # - LlamaStack: "https://lss-lss.apps.prod.rhoai.rh-aiservices-bu.com/v1/openai/v1"
  # - OpenAI: "https://api.openai.com/v1"
  # - Anthropic: "https://api.anthropic.com/v1"
  llm-base-url: "https://your-llm-endpoint.com/v1"
  
  # Optional: Store API keys for embeddings (if different from LLM)
  embedding-api-key: "your-embedding-api-key-here"

---
# Alternative: Create secret from command line (recommended for production)
# 
# oc create secret generic ops-agent-secrets \
#   --from-literal=llm-api-key='your-api-key' \
#   --from-literal=llm-base-url='https://your-endpoint.com/v1' \
#   -n your-namespace
#
# Or from file:
# oc create secret generic ops-agent-secrets \
#   --from-file=llm-api-key=./llm-key.txt \
#   --from-file=llm-base-url=./llm-url.txt \
#   -n your-namespace
